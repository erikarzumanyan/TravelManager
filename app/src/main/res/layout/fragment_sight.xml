<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:paddingBottom="@dimen/padding"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:paddingLeft="@dimen/padding"
        android:paddingStart="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:paddingEnd="@dimen/padding"
        android:gravity="center_vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:id="@+id/text_view_fav_count_sight_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="0 likes"/>

            <TextView
                android:id="@+id/text_view_name_sight_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CF000000"
                android:textStyle="bold"
                android:textSize="28sp"
                android:text="Title"/>

            <TextView
                android:id="@+id/text_view_category_sight_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:text="Category"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/image_view_fav_sight_fragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/fav_add"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:paddingTop="1dp"/>

    <ScrollView
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:paddingLeft="@dimen/padding"
        android:paddingStart="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:paddingEnd="@dimen/padding"
        android:paddingBottom="@dimen/padding">

        <TextView
            android:id="@+id/text_view_about_sight_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="about"/>

    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:weightSum="3">

        <TextView
            android:id="@+id/text_view_eat_sight_fragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin = "1dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:text="@string/nav_eating"/>

        <TextView
            android:id="@+id/text_view_sleep_sight_fragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin = "1dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:text="@string/nav_sleeping"/>

        <TextView
            android:id="@+id/text_view_tours_sight_fragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin = "1dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:text="@string/nav_tours"/>

    </LinearLayout>

</LinearLayout>