<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <ImageView
        android:id="@+id/sigthImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/e"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
        android:background="#89000000" android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentStart="true" android:layout_weight="1"
            android:background="#96000000" android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="Now " android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    android:textIsSelectable="false" android:textSize="30sp"/>
                <TextView
                    android:id="@+id/temperatureText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textSize="40sp"/>

                <ImageView
                    android:id="@+id/descriptionLogo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/temperatureText"
                    android:layout_toRightOf="@+id/temperatureText"
                    android:src="@mipmap/cloudy"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center|center_horizontal" android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_day_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_weight="1"
                android:text="Mondayy"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff" android:textSize="25sp"/>
            <ImageView
                android:id="@+id/icon_monday"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView android:id="@+id/tempTuesday" android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1" android:text="째C"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textColor="#ffffff"
                      android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center_vertical|center|center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_day_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_weight="1"
                android:text="Tuesday"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff" android:textSize="25sp"/>
            <ImageView android:id="@+id/icon_thuesday" android:layout_width="50dp"
                       android:layout_height="50dp"/>
            <TextView android:id="@+id/tempThursday" android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1" android:text="째C"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textColor="#ffffff"
                      android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center_vertical|center|center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_day_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_weight="0.86"
                android:text="Wednsday"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff" android:textSize="25sp"/>
            <ImageView android:id="@+id/icon_wednsday" android:layout_width="50dp"
                       android:layout_height="50dp"/>
            <TextView android:id="@+id/tempFriday" android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1" android:text="째C"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textColor="#ffffff"
                      android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center_vertical|center|center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_day_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_weight="1"
                android:text="Thursday"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff" android:textSize="25sp"/>
            <ImageView android:id="@+id/icon_thursday" android:layout_width="50dp"
                       android:layout_height="50dp"/>
            <TextView android:id="@+id/tempWednsday" android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1" android:text="째C"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textColor="#ffffff"
                      android:textSize="25sp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

