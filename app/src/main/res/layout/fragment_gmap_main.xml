<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <fragment
        android:id="@+id/main_map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right|bottom"/>

    <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left|bottom"
                                        app:cardBackgroundColor="@color/transparent"
                                        app:cardCornerRadius="8dp"
                                        app:cardElevation="0dp">


        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_gravity="left|bottom" android:background="#4d070707"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:layout_weight="1" android:orientation="horizontal">
                <ImageView android:id="@+id/imageView_eat_map_info"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="2dp"
                           android:layout_marginTop="2dp"
                           android:background="@drawable/ic_menu_camera"
                           android:src="@mipmap/icon_sight"/>
                <TextView android:id="@+id/textVie_eat_map_info" android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="2dp"
                          android:layout_marginTop="10dp"
                          android:text="- Where To Go"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textColor="#ffffff"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="horizontal">
                <ImageView android:id="@+id/imageView_sight_map_info"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="2dp"
                           android:background="@drawable/ic_menu_camera"
                           android:src="@mipmap/icon_eat"/>
                <TextView android:id="@+id/textView_sight_map_info"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="2dp"
                          android:layout_marginTop="10dp"
                          android:text="- Where To Eat"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textColor="#ffffff"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="horizontal">
                <ImageView android:id="@+id/imageView_tour_map_info"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="2dp"
                           android:background="@drawable/ic_menu_camera"
                           android:src="@mipmap/icon_sleep"/>
                <TextView android:id="@+id/textView_tour_map_info"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginRight="3dp"
                          android:layout_marginTop="10dp"
                          android:text="- Where To Sleep"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textColor="#ffffff"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
